{
	"name": "devuri/brisko",
	"description": "Lightweight WordPress Starter Theme, based on Underscores and Bootstrap 4",
	"keywords": ["WordPress","Themes"],
	"license": "GPL-2.0-only",
	"authors": [
		{
			"name": "Uriel Wilson",
			"email": "hello@urielwilson.com",
			"homepage": "https://urielwilson.com",
			"role": "Developer"
		}
	],
    "require": {
        "php": "^7.3 || ^7.4"
    },
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7.2",
		"friendsofphp/php-cs-fixer": "^3.8",
		"php-parallel-lint/php-parallel-lint": "^1.3",
		"wptrt/wpthemereview": "^0.2.1"
	},
    "scripts": {
		"build": [
			"composer lint-php",
			"composer wpcs",
			"composer codefix",
			"composer no-dev"
		],
		"codefix": [
		    "composer install -q",
		    "vendor/bin/php-cs-fixer fix src",
		    "composer install --no-dev -q"
		],
		"no-dev": "composer install --no-dev",
        "wpcs": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs --colors",
        "lint-php": "@php ./vendor/bin/parallel-lint --exclude .git --exclude vendor ."
    },
	"config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
